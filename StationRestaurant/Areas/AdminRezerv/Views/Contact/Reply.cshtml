@model Business.ViewModels.Reply.ReplyVM

<div class="content-page">
    <div class="content">

        <!-- Start Content-->
        <div class="container-fluid">
            <div class="ro">
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="header-title mb-4">Contact Reply</h4>
                            <div class="form-row">
                                <div/>

                                <p>FirstName: @Model.Contact.FirstName</p>
                                <p>LastName: @Model.Contact.LastName</p>
                                <p>Email: @Model.Contact.Email</p>
                                <p>PhoneNumber: @Model.Contact.PhoneNumber</p>
                                <p>CreatedAt: @Model.Contact.CreatedAt</p>
                                <p>Message: @Model.Contact.Message</p>
                                <form method="post">
                                    <div class="form-group row">
                                        <div class="col-lg-10">
                                            <div>Reply Message</div>
                                            <span asp-validation-for="Message" class="text-danger"></span>
                                            <textarea asp-for="Message" class="form-control" rows="5" id="example-textarea"></textarea>
                                        </div>
                                    </div>
                                    <button type="submit" class="btn btn-primary">Reply</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>