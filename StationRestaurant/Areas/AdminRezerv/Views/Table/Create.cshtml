@model TablePostVM
<div class="content-page">
    <div class="content">

        <!-- Start Content-->
        <div class="container-fluid">

            <!-- start page title -->
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box">
                        <h4 class="page-title">Create New Table</h4>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
            <!-- end page title -->

            <div class="row">
                <div class="col-lg-6">
                    <div class="card">
                        <div class="card-body">
                             <form class="parsley-examples" method="post" enctype="multipart/form-data">
                                <div class="form-group">
                                    <label asp-for="TableNumber">Table Number<span class="text-danger">*</span></label>
                                    <input asp-for="TableNumber" parsley-trigger="change" required placeholder="Enter Table Number" class="form-control">
                                    <span asp-validation-for="TableNumber" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="MaxPersonCount">Max Person Count<span class="text-danger">*</span></label>
                                    <input asp-for="MaxPersonCount" parsley-trigger="change" required placeholder="Enter Max Person Count" class="form-control">
                                    <span class="text-danger" asp-validation-for="MaxPersonCount"></span>
                                </div>
                                <div class="form-group text-right mb-0">
                                    <button class="btn btn-primary waves-effect waves-light mr-1" type="submit">
                                        Submit
                                    </button>
                                    <button type="reset" class="btn btn-secondary waves-effect waves-light">
                                        Cancel
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                    <!-- end card -->
                </div>
                <!-- end col -->

            </div>

        </div>
        <!-- end container-fluid -->

    </div>
    <!-- end content -->


    <!-- Footer Start -->
    <footer class="footer">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    2015 - 2020 &copy; Velonic theme by <a href="#">Coderthemes</a>
                </div>
            </div>
        </div>
    </footer>
    <!-- end Footer -->

</div>