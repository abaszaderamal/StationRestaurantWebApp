@model Business.ViewModels.Message.MessageVM
<div class="content-page">
    <div class="content">

        <!-- Start Content-->
        <div class="container-fluid">

            <!-- start page title -->
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box">
                        <h4 class="page-title">Form Validation</h4>
                        <div class="page-title-right">
                            <ol class="breadcrumb p-0 m-0">
                                <li class="breadcrumb-item">
                                    <a href="#">Velonic</a>
                                </li>
                                <li class="breadcrumb-item">
                                    <a href="#">Forms</a>
                                </li>
                                <li class="breadcrumb-item active">Form Validation</li>
                            </ol>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
            <!-- end page title -->

            <div class="row">
                <div class="col-lg-6">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="header-title mb-4">Basic Form</h4>
                            @* <div class="alert-danger"  asp-validation-summary="All"  ></div> *@
                            <h3 class="alert-success  contact_alert">@TempData["msg"]</h3>

                            <form method="post">
                                <div class="form-group row">
                                    <div class="form-group Subjectc">
                                        <label asp-for="Subject">Subject<span class="text-danger">*</span> </label>
                                        <input asp-for="Subject" parsley-trigger="change" required placeholder="Enter Title" class="form-control">
                                        <span class="text-danger" asp-validation-for="Subject"></span>
                                    </div>
                                    <div class="col-lg-10">
                                        <div>Send Message </div>
                                        <span asp-validation-for="Msg" class="text-danger"></span>
                                        <textarea asp-for="Msg"    id="example-textarea"></textarea>
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-primary">Send</button>
                            </form>
                        </div>
                    </div>
                    <!-- end card -->
                </div>
                <!-- end col -->

            </div>

        </div>
        <!-- end container-fluid -->

    </div>
    <!-- end content -->


    <!-- Footer Start -->
    <footer class="footer">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    2015 - 2020 &copy; Velonic theme by <a href="#">Coderthemes</a>
                </div>
            </div>
        </div>
    </footer>
    <!-- end Footer -->

</div>
<style>
    .Subjectc{
        margin-left: 13px;
    }

</style>

@section scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/ckeditor5/32.0.0/ckeditor.min.js"></script>
    <script>
                        ClassicEditor.create(document.querySelector('#example-textarea')).catch(error => {
                            console.error(error);
                        });
                    </script>

}