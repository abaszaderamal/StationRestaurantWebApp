@model HomeVM
<main>
    <section id="Slider">

        <div class="owl-carousel owl-theme ">
            @foreach (var slide in Model.HeadSlides)
            {
                <div class="item">
                    <img src="~/Assets/Img/@slide.Image" alt="">
                </div>
            }
        </div>
        <!-- or ul.my-slider > li -->
    </section>

    <section id="headcard">
        <h3 class="head-card-title"> Last added</h3>
        <div class="headcards">
            @foreach (var product in Model.Products.Where(p=>p.ProductCategory.IsDeleted==false))
            {
                <div class="card">
                    <a class="card-image" asp-controller="Product" asp-action="Index" asp-route-id="@product.Id" target="_blank"
                       style="background-image: url('Assets/img/@product.Image');">
                        <img src="~/Assets/img/@product.Image" alt="Psychopomp"/>
                    </a>
                    <a class="card-description" asp-controller="Product" asp-action="Index" asp-route-id="@product.Id" target="_blank">
                        <h2>@product.Name</h2>
                        <p>@product.ProductCategory.Name.ToUpper()</p>
                    </a>
                </div>
            }

        </div>
    </section>


    <section id="Home-parallax1">
        <div class="Homeparallax" style="background-image: url(Assets/Img/@Model.Settings["parallax1"]) ">
            <div class="content-parallax">
                <h1>
                    <a asp-controller="Reservation" asp-action="Index">
                        <span>Booking</span>
                    </a>
                </h1>

            </div>
        </div>
    </section>

    <section id="Galery">
        <h3 class="gallery-title-hm ">Galery</h3>
        <div class="galery">
            @foreach (var item in @Model.MiniGallery)
            {
                <a href="~/Assets/Img/@item.Image" class="hg">
                    <img src="~/Assets/Img/@item.Image" alt="">
                </a>
            }
        </div>
        <p class="see-all">
            <a asp-controller="Gallery" asp-action="Index">See All</a>
        </p>
    </section>
    <section id="Home-parallax1">
        <div class="Homeparallax" style="background-image: url(Assets/Img/@Model.Settings["parallax2"])">
            <div class="content-parallax">
                <h1>
                    <a asp-controller="Contact" asp-action="Index">
                        <span>Contact</span>
                    </a>
                </h1>

            </div>
        </div>
    </section>

    <section id="Product">
        <h3 class="about_title">About Us</h3>

        <div class="container">
            <div class="row">
                <div class="col-lg-5">
                    <img src="Assets/Img/@Model.About.Image" class="product_image" alt="">
                </div>
                <div class="col-lg-6 product_content">
                    <h4>@Model.About.Title</h4>
                    <span>@Model.About.Head // @Model.About.UpdatedAt.ToString("MM/dd/yyyy HH:mm")</span>
                    <p>
                        @Model.About.Content
                    </p>
                </div>
            </div>
        </div>

    </section>
</main>