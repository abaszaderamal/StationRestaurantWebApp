@model UserPostVM
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">


<head>
    <meta charset="utf-8"/>
    <title>Register </title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="Responsive bootstrap 4 admin template" name="description"/>
    <meta content="Coderthemes" name="author"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
    <!-- App favicon -->
    <link rel="shortcut icon" href="~/Admin/assets/images/favicon.ico">

    <!-- App css -->
    <link href="~/Admin/assets/css/bootstrap.min.css" rel="stylesheet" type="text/css" id="bootstrap-stylesheet"/>
    <link href="~/Admin/assets/css/icons.min.css" rel="stylesheet" type="text/css"/>
    <link href="~/Admin/assets/css/app.min.css" rel="stylesheet" type="text/css" id="app-stylesheet"/>

</head>

<body class="authentication-page">

<div class="account-pages my-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6 col-xl-5">
                <div class="card mt-4">
                    <div class="card-header text-center p-4 bg-primary">
                        <h4 class="text-white mb-0 mt-0">Admin Register</h4>
                        <h5 class="text-white font-13 mb-0">Create a new Account</h5>
                    </div>
                    <div class="card-body">
                        <form method="post" class="p-2">

                            <div class="form-group mb-3">
                                <label asp-for="Name">Name :</label>
                                <input class="form-control" asp-for="Name" required="" placeholder="john ">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="LastName">Last Name :</label>
                                <input class="form-control" asp-for="LastName" required="" placeholder="john deo">
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="UserName">UserName :</label>
                                <input class="form-control" asp-for="UserName" required="" placeholder="john deo">
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="Email">Email :</label>
                                <input class="form-control" asp-for="Email" required="" placeholder="john@deo.com">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>     <div class="form-group mb-3">
                                <label asp-for="Password">Password :</label>
                                <input type="password" class="form-control" asp-for="Password" required=""placeholder="Enter your password">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div> <div class="form-group mb-3">
                                <label asp-for="ConfirmPassword">ConfirmPassword :</label>
                                <input type="password" class="form-control" asp-for="ConfirmPassword" required=""placeholder="Enter your password">
                                <span  asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>

                            <div class="form-group text-right mt-4 mb-4">
                                <div class="col-12">
                                    <button class="btn btn-md btn-primary waves-effect waves-light" type="submit">Register</button>
                                </div>
                            </div>

                            <div class="form-group row mb-0">
                                <div class="col-sm-12 text-center">
                                    <a asp-area="AdminRezerv" asp-controller="DashBoard" asp-action="Index">Admin Panel</a>
                                </div>
                            </div>
                        </form>

                    </div>
                    <!-- end card-body -->
                </div>
                <!-- end card -->
                <!-- end row -->

            </div>
            <!-- end col -->
        </div>
        <!-- end row -->

    </div>
</div>

<!-- Vendor js -->
<script src="~/Admin/assets/js/vendor.min.js"></script>

<!-- App js -->
<script src="~/Admin/assets/js/app.min.js"></script>

</body>


</html>